<p id="notice"><%= notice %></p>

<h1>Listing Rooms</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>Floor</th>
      <th>City</th>
      <th>Country</th>
      <th>Description</th>
      <th>Direction</th>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.name %></td>
        <td><%= room.street %></td>
        <td><%= room.floor %></td>
        <td><%= room.city %></td>
        <td><%= room.country %></td>
        <td><%= room.description %></td>
        <td><%= room.direction %></td>
        <td><%= room.link %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

